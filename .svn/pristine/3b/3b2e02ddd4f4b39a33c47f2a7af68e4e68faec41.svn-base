@charset "UTF-8";
        /* 찜 버튼을 상품 정보 위에 겹쳐서 표시하기 위한 스타일 */
        .product-item {
            position: relative; /* 자식 요소인 .wish-button의 absolute 배치를 위함 */
            display: flex; /* 상품 정보와 이미지 래퍼를 수평으로 배치 */
            flex-direction: column; /* 기본적으로 세로 배치 후 하트 버튼 겹치기 */
            /* 여기에 기존 상품 아이템 스타일 유지 */
        }

        .product-image-wrapper {
            position: relative; /* 하트 버튼을 이미지 위에 겹치기 위함 */
            /* 기존 이미지 래퍼 스타일 유지 */
        }
        
        .wish-button {
            position: absolute; /* .product-image-wrapper 내에서 절대 위치 */
            top: 10px; /* 위에서 10px */
            right: 10px; /* 오른쪽에서 10px */
            background: rgba(255, 255, 255, 0.7); /* 반투명 배경 */
            border: none;
            border-radius: 50%; /* 원형 버튼 */
            width: 35px; /* 버튼 크기 */
            height: 35px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.2em; /* 아이콘 크기 */
            cursor: pointer;
            color: #ccc; /* 기본 빈 하트 색상 */
            transition: color 0.2s ease-in-out, background-color 0.2s ease-in-out;
            z-index: 10; /* 다른 요소 위에 표시되도록 */
            box-shadow: 0 2px 5px rgba(0,0,0,0.2); /* 그림자 효과 */
        }
        .wish-button:hover {
            background-color: rgba(255, 255, 255, 0.9);
        }
        .wish-button.wished {
            color: #ff0080; /* 찜된 하트 색상 (핑크) */
        }
        /* 상품 정보와 하트 버튼이 같은 줄에 있도록 flexbox를 사용할 경우 */
        .product-info-and-wish {
            display: flex;
            justify-content: space-between; /* 상품 정보와 하트 버튼을 양 끝으로 분리 */
            align-items: center;
            width: 100%; /* 부모의 너비를 꽉 채우도록 */
            padding-top: 10px; /* 상단 여백 */
        }
        .product-info-and-wish .product-info {
             flex-grow: 1; /* 상품 정보가 공간을 다 차지하도록 */
        }
