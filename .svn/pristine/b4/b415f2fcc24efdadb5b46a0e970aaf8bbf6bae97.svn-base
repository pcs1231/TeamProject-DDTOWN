	<!-- alert_type_code 가져오기 -->
	<select id="getATCs" resultType="string">
		SELECT
		    comm_code_det_no
		FROM
		    common_detail_code
		WHERE
		    comm_code_grp_no = 'ALERT_TYPE_CODE'
	</select>
	
	 <insert id="insertSetting" parameterType="kr.or.ddit.vo.alert.AlertSettingVO" >
	 	INSERT INTO alert_setting (
		    alert_type_code
		    , mem_username
		) VALUES (
		    #{alertTypeCode}
		  , #{memUsername}
		)
	 </insert>
	
	<insert id="insertAlert" parameterType="kr.or.ddit.vo.alert.AlertVO" useGeneratedKeys="true">
		<selectKey keyProperty="alertNo" resultType="long" order="BEFORE" >
			SELECT ALERT_SEQ.NEXTVAL FROM DUAL
		</selectKey>
		INSERT INTO ALERT (
			alert_no, alert_type_code, related_item_type_code, alert_content, alert_url,
			alert_create_date, related_item_no, related_item_char
		) VALUES (
			#{alertNo}, #{alertTypeCode}, #{relatedItemTypeCode}, #{alertContent}, #{alertUrl},
			#{alertCreateDate}, #{relatedItemNo}, #{relatedItemChar}
		)
	</insert>
	
	<insert id="insertAlertReceiver" parameterType="kr.or.ddit.vo.alert.AlertReceiverVO">
		INSERT INTO ALERT_RECEIVER(
			alert_no, mem_username, alert_get_date, alert_read_yn, alert_del_yn
		) VALUES (
			#{alertNo}, #{memUsername}, #{alertGetDate}, #{alertReadYn}, #{alertDelYn}
		)
	</insert>
	
	<select id="selectAlertsByUsername" parameterType="map" resultMap="alertResultMap">
        SELECT * FROM (
            SELECT
                A.ALERT_NO
                , A.ALERT_TYPE_CODE
                , A.RELATED_ITEM_TYPE_CODE
                , A.ALERT_CONTENT
                , A.ALERT_URL
                , A.ALERT_CREATE_DATE
                , A.RELATED_ITEM_NO
                , A.RELATED_ITEM_CHAR
                , AR.ALERT_READ_YN
                , CP.ART_GROUP_NO
                , AG.ART_GROUP_NM
            FROM ALERT A
            JOIN ALERT_RECEIVER AR ON (A.ALERT_NO = AR.ALERT_NO)
            JOIN COMMUNITY_POST CP ON (A.RELATED_ITEM_TYPE_CODE = 'ITC001' AND A.RELATED_ITEM_NO = CP.COMU_POST_NO)
            LEFT JOIN ARTIST_GROUP AG ON (CP.ART_GROUP_NO = AG.ART_GROUP_NO) 
            WHERE AR.MEM_USERNAME = #{memUsername}
              AND AR.ALERT_DEL_YN = 'N'
              AND A.ALERT_TYPE_CODE = 'ATC001' 
              <if test="artGroupNo != null and artGroupNo > 0">
                AND CP.ART_GROUP_NO = #{artGroupNo}
              </if>

            UNION ALL

            SELECT
                A.ALERT_NO
                , A.ALERT_TYPE_CODE
                , A.RELATED_ITEM_TYPE_CODE
                , A.ALERT_CONTENT
                , A.ALERT_URL
                , A.ALERT_CREATE_DATE
                , A.RELATED_ITEM_NO
                , A.RELATED_ITEM_CHAR
                , AR.ALERT_READ_YN
                , CP.ART_GROUP_NO
                , AG.ART_GROUP_NM
            FROM ALERT A
            JOIN ALERT_RECEIVER AR ON (A.ALERT_NO = AR.ALERT_NO)
            JOIN COMMUNITY_REPLY CR ON (A.RELATED_ITEM_TYPE_CODE = 'ITC002' AND A.RELATED_ITEM_NO = CR.COMU_REPLY_NO)
            JOIN COMMUNITY_POST CP ON (CR.COMU_POST_NO = CP.COMU_POST_NO)
            LEFT JOIN ARTIST_GROUP AG ON (CP.ART_GROUP_NO = AG.ART_GROUP_NO) 
            WHERE AR.MEM_USERNAME = #{memUsername}
              AND AR.ALERT_DEL_YN = 'N'
              AND A.ALERT_TYPE_CODE = 'ATC002' 
              <if test="artGroupNo != null and artGroupNo > 0">
                AND CP.ART_GROUP_NO = #{artGroupNo}
              </if>
              
            UNION ALL

            SELECT
                A.ALERT_NO
                , A.ALERT_TYPE_CODE
                , A.RELATED_ITEM_TYPE_CODE
                , A.ALERT_CONTENT
                , A.ALERT_URL
                , A.ALERT_CREATE_DATE
                , A.RELATED_ITEM_NO
                , A.RELATED_ITEM_CHAR
                , AR.ALERT_READ_YN
                , CC.ART_GROUP_NO AS ART_GROUP_NO
                , AG.ART_GROUP_NM 
            FROM ALERT A
            JOIN ALERT_RECEIVER AR ON (A.ALERT_NO = AR.ALERT_NO)
            JOIN CHAT_MESSAGE CM ON (A.RELATED_ITEM_TYPE_CODE = 'ITC003' AND A.RELATED_ITEM_NO = CM.CHAT_NO)
            LEFT JOIN CHAT_CHANNELS CC ON (CM.CHAT_CHANNEL_NO = CC.CHAT_CHANNEL_NO)
            LEFT JOIN ARTIST_GROUP AG ON (CC.ART_GROUP_NO = AG.ART_GROUP_NO)
            WHERE AR.MEM_USERNAME = #{memUsername}
              AND AR.ALERT_DEL_YN = 'N'
              AND A.ALERT_TYPE_CODE = 'ATC003'
            <if test="artGroupNo != null and artGroupNo > 0">
                AND CC.ART_GROUP_NO = #{artGroupNo}
            </if>
              
            UNION ALL

            SELECT
                A.ALERT_NO
                , A.ALERT_TYPE_CODE
                , A.RELATED_ITEM_TYPE_CODE
                , A.ALERT_CONTENT
                , A.ALERT_URL
                , A.ALERT_CREATE_DATE
                , A.RELATED_ITEM_NO
                , A.RELATED_ITEM_CHAR
                , AR.ALERT_READ_YN
                , CC.ART_GROUP_NO AS ART_GROUP_NO
                , AG.ART_GROUP_NM
            FROM ALERT A
            JOIN ALERT_RECEIVER AR ON (A.ALERT_NO = AR.ALERT_NO)
            JOIN LIVE L ON (A.RELATED_ITEM_TYPE_CODE = 'ITC004' AND A.RELATED_ITEM_NO = L.LIVE_NO)
            LEFT JOIN CHAT_CHANNELS CC ON (L.CHAT_CHANNEL_NO = CC.CHAT_CHANNEL_NO)
            LEFT JOIN ARTIST_GROUP AG ON (CC.ART_GROUP_NO = AG.ART_GROUP_NO) 
            WHERE AR.MEM_USERNAME = #{memUsername}
              AND AR.ALERT_DEL_YN = 'N'
              AND A.ALERT_TYPE_CODE = 'ATC004'
              <if test="artGroupNo != null and artGroupNo > 0">
                AND CC.ART_GROUP_NO = #{artGroupNo}
              </if>
              
            UNION ALL

            SELECT
                A.ALERT_NO
                , A.ALERT_TYPE_CODE
                , A.RELATED_ITEM_TYPE_CODE
                , A.ALERT_CONTENT
                , A.ALERT_URL
                , A.ALERT_CREATE_DATE
                , A.RELATED_ITEM_NO
                , A.RELATED_ITEM_CHAR
                , AR.ALERT_READ_YN
                , CP.ART_GROUP_NO
                , AG.ART_GROUP_NM
            FROM ALERT A
            JOIN ALERT_RECEIVER AR ON (A.ALERT_NO = AR.ALERT_NO)
            JOIN COMMUNITY_LIKE CL ON (A.RELATED_ITEM_TYPE_CODE = 'ITC005' AND A.RELATED_ITEM_NO = CL.COMU_LIKE_NO)
            JOIN COMMUNITY_POST CP ON (CL.COMU_POST_NO = CP.COMU_POST_NO)
            LEFT JOIN ARTIST_GROUP AG ON (CP.ART_GROUP_NO = AG.ART_GROUP_NO) 
            WHERE AR.MEM_USERNAME = #{memUsername}
              AND AR.ALERT_DEL_YN = 'N'
              AND A.ALERT_TYPE_CODE = 'ATC005' 
              <if test="artGroupNo != null and artGroupNo > 0">
                AND CP.ART_GROUP_NO = #{artGroupNo}
              </if>

              
              UNION ALL

            SELECT
                A.ALERT_NO
                , A.ALERT_TYPE_CODE
                , A.RELATED_ITEM_TYPE_CODE
                , A.ALERT_CONTENT
                , A.ALERT_URL
                , A.ALERT_CREATE_DATE
                , A.RELATED_ITEM_NO
                , A.RELATED_ITEM_CHAR
                , AR.ALERT_READ_YN
                , MD.ART_GROUP_NO AS ART_GROUP_NO
                , AG.ART_GROUP_NM
            FROM ALERT A
            JOIN ALERT_RECEIVER AR ON (A.ALERT_NO = AR.ALERT_NO)
            JOIN MEMBERSHIP_SUBSCRIPTIONS MS ON (A.RELATED_ITEM_TYPE_CODE = 'ITC006' AND A.RELATED_ITEM_NO = MS.MBSP_SUB_NO)
            LEFT JOIN MEMBERSHIP_DESCRIPTION MD ON (MS.MBSP_NO = MD.MBSP_NO)
            LEFT JOIN ARTIST_GROUP AG ON (MD.ART_GROUP_NO = AG.ART_GROUP_NO)
            WHERE AR.MEM_USERNAME = #{memUsername}
              AND AR.ALERT_DEL_YN = 'N'
              AND A.ALERT_TYPE_CODE = 'ATC006'
              <if test="artGroupNo != null and artGroupNo > 0">
                AND MD.ART_GROUP_NO = #{artGroupNo}
              </if>
              
              UNION ALL
              
              SELECT
              	A.ALERT_NO
                , A.ALERT_TYPE_CODE
                , A.RELATED_ITEM_TYPE_CODE
                , A.ALERT_CONTENT
                , A.ALERT_URL
                , A.ALERT_CREATE_DATE
                , A.RELATED_ITEM_NO
                , A.RELATED_ITEM_CHAR
                , AR.ALERT_READ_YN
                , C.ART_GROUP_NO AS ART_GROUP_NO
                , AG.ART_GROUP_NM
              FROM ALERT A
              JOIN ALERT_RECEIVER AR ON (A.ALERT_NO = AR.ALERT_NO)
              JOIN CONCERT C ON (A.RELATED_ITEM_TYPE_CODE = 'ITC007' AND A.RELATED_ITEM_NO = C.CONCERT_NO)
              LEFT JOIN ARTIST_GROUP AG ON (C.ART_GROUP_NO = AG.ART_GROUP_NO)
              WHERE AR.MEM_USERNAME = #{memUsername}
                AND AR.ALERT_DEL_YN = 'N'
                AND A.ALERT_TYPE_CODE = 'ATC007'
                <if test="artGroupNo != null and artGroupNo > 0">
                AND C.ART_GROUP_NO = #{artGroupNo}
              </if>
              
              ORDER BY ALERT_CREATE_DATE DESC
        )
        <where>
            <if test="alertNo != null and alertNo > 0">
                AND ALERT_NO <![CDATA[ <= ]]> #{alertNo}
            </if>
            <if test="cnt != null and cnt > 0">
                AND ROWNUM <![CDATA[ <= ]]> #{cnt}
            </if>
        </where>
    </select>
	
