body {
  margin: 0;
  font-family: 'Noto Sans KR', Arial, sans-serif;
  background: #fff;
  color: #222;
}
.profile-header {
  background: #fff;
  border-bottom: 1px solid #e5e5e5;
  padding: 40px 0 20px 0;
  text-align: center;
  border-radius : 20px;
}
.profile-header-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.profile-avatar {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  overflow: hidden;
  background: #e9ecef;
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.profile-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.profile-nickname {
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 18px;
}
.profile-search-form {
  display: flex;
  align-items: center;
  background: #f7f7f7;
  border-radius: 8px;
  padding: 6px 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  margin-bottom: 10px;
  max-width: 400px;
  margin-left: auto;
  margin-right: auto;
}
.profile-search-input {
  border: none;
  background: transparent;
  font-size: 1.1em;
  padding: 8px;
  outline: none;
  flex: 1;
}
.profile-search-btn {
  background: #fff;
  border: 2px solid #222;
  border-radius: 6px;
  font-size: 1em;
  padding: 4px 18px;
  margin-left: 8px;
  cursor: pointer;
  font-weight: bold;
}
.profile-main {
  max-width: 700px;
  margin: 0 auto;
  padding: 32px 16px;
}
.profile-tabs {
  display: flex;
  gap: 24px;
  border-bottom: 2px solid #e5e5e5;
  margin-bottom: 24px;
}
.profile-tabs .tab {
  background: none;
  border: none;
  font-size: 1.1em;
  font-weight: bold;
  color: #888;
  padding: 8px 0;
  cursor: pointer;
  border-bottom: 2px solid transparent;
  transition: color 0.2s, border-bottom 0.2s;
}
.profile-tabs .tab.active {
  color: #aa76da;
  border-bottom: 2px solid #8a2be2;
}
.profile-tab-content {
  min-height: 180px;
}
.no-content {
  text-align: center;
  color: #bbb;
  font-size: 1.1em;
  padding: 60px 0;
}