	public int getTotalOrdersCount(PaginationInfoVO<OrdersVO> pagingVO);

	public List<OrdersVO> getAllOrders(PaginationInfoVO<OrdersVO> pagingVO);

	public OrdersVO getOrderDetail(int orderNo);
	
	/**
