 	// 다른 차트들 초기화
    function createChart(id, type, data, options) {
        const ctx = document.getElementById(id);
        if(chartMap[id] != null){
        	chartMap[id].destroy();
        }

        if (ctx) {
            let myChart = new Chart(ctx.getContext('2d'), {
                type: type,
                data: data,
                options: options
            });
            chartMap[id] = myChart;
        }
    }

