	<script type="text/javascript">
		$(function(){
			<c:if test="${not empty message }">
				Swal.fire({
						title : "${message }",
						icon : "success",
						draggable : true
					});
				<c:remove var="message" scope="request"/>
				<c:remove var="message" scope="session"/>
			</c:if>
		})
		function sweetAlert(type, msg){
			return Swal.fire({
				title : msg,
				icon : type,
				draggable : true
			});
		}
	</script>
