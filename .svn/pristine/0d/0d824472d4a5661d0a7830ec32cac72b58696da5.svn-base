    <script>
    // 검색/필터 기능 (프론트엔드 예시)
    document.addEventListener('DOMContentLoaded', function() {
        const searchBtn = document.getElementById('orderSearchBtn');
        const searchInput = document.getElementById('orderSearchInput');
        const statusFilter = document.getElementById('orderStatusFilter');
        const dateStartInput = document.getElementById('orderDateStart');
        const dateEndInput = document.getElementById('orderDateEnd');
        const tableBody = document.getElementById('ordersTableBody');
        if (searchBtn && tableBody) {
            searchBtn.addEventListener('click', function() {
                const searchTerm = searchInput.value.toLowerCase();
                const selectedStatus = statusFilter.value;
                const startDate = dateStartInput.value;
                const endDate = dateEndInput.value;
                const rows = tableBody.querySelectorAll('tr');
                rows.forEach(row => {
                    const orderIdCell = row.querySelector('td:nth-child(1) a');
                    const orderDateCell = row.querySelector('td:nth-child(2)');
                    const customerCell = row.querySelector('td:nth-child(3)');
                    const orderStatusCell = row.querySelector('td:nth-child(6) span');
                    let showRow = true;
                    if (searchTerm) {
                        const orderIdText = orderIdCell ? orderIdCell.textContent.toLowerCase() : "";
                        const customerText = customerCell ? customerCell.textContent.toLowerCase() : "";
                        if (!orderIdText.includes(searchTerm) && !customerText.includes(searchTerm)) {
                            showRow = false;
                        }
                    }
                    if (showRow && selectedStatus && orderStatusCell) {
                        let currentStatusValue = "";
                        if (orderStatusCell.classList.contains('status-pending-payment')) currentStatusValue = 'pending_payment';
                        else if (orderStatusCell.classList.contains('status-payment-completed')) currentStatusValue = 'payment_completed';
                        else if (orderStatusCell.classList.contains('status-preparing')) currentStatusValue = 'preparing';
                        else if (orderStatusCell.classList.contains('status-shipping')) currentStatusValue = 'shipping';
                        else if (orderStatusCell.classList.contains('status-delivered')) currentStatusValue = 'delivered';
                        else if (orderStatusCell.classList.contains('status-cancelled')) currentStatusValue = 'cancelled';
                        if (currentStatusValue !== selectedStatus) {
                            showRow = false;
                        }
                    }
                    if (showRow && orderDateCell) {
                        const orderDate = orderDateCell.textContent.substring(0, 10);
                        if (startDate && orderDate < startDate) {
                            showRow = false;
                        }
                        if (endDate && orderDate > endDate) {
                            showRow = false;
                        }
                    }
                    row.style.display = showRow ? '' : 'none';
                });
            });
        }
    });
    </script>
