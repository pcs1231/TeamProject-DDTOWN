<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="jakarta.tags.core" prefix="c" %>
<%@ taglib uri="jakarta.tags.fmt" prefix="fmt" %>
<%@ taglib uri="jakarta.tags.functions" prefix="fn" %>
<%@ taglib uri="http://www.springframework.org/security/tags" prefix="sec" %>
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DD TOWN - 마이페이지</title>
    <meta name="_csrf" content="${_csrf.token}"/>
    <meta name="_csrf_header" content="${_csrf.headerName}"/>
    <sec:csrfMetaTags />
    <link rel="stylesheet" href="${pageContext.request.contextPath}/resources/css/pages/mainservice_common.css">
    <link rel="stylesheet" href="${pageContext.request.contextPath}/resources/css/pages/mainservice_home.css">
    <link rel="stylesheet" href="${pageContext.request.contextPath}/resources/css/pages/mypage_common.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" ></script>
    <style>
        .form-group-mypage.password-confirm-area { margin-top: 20px; border-top: 1px solid #eee; padding-top: 20px; }
        .server-message { padding: 10px; margin-bottom: 15px; border-radius: 4px; text-align: center; display: none; }
        .server-message.success { background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb; }
        .server-message.error { background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; }
        .btn-mypage-primary.loading::after { 
            content: ''; position: absolute; width: 16px; height: 16px; top: 50%; left: 50%;
            margin-top: -8px; margin-left: -8px; border: 2px solid #fff;
            border-top-color: transparent; border-radius: 50%; animation: spin 1s linear infinite;
        }
        .btn-mypage-secondary {
		    background-color: #6c757d; /* 적당한 회색 배경 */
		    color: #fff; /* 흰색 글씨 */
		    border: 1px solid #6c757d; /* 테두리 */
		    padding: 8px 15px; /* 적당한 패딩 */
		    border-radius: 4px; /* 살짝 둥근 모서리 */
		    cursor: pointer; /* 마우스 오버 시 손가락 모양 (클릭 가능 시각화) */
		    font-size: 0.9em; /* 폰트 크기 조절 */
		    transition: background-color 0.2s, border-color 0.2s; /* 부드러운 호버 효과 */
		}
		
		.btn-mypage-secondary:hover {
		    background-color: #5a6268; /* 호버 시 약간 어둡게 */
		    border-color: #545b62;
		}
		
		.btn-mypage-secondary:active {
		    background-color: #4e555b; /* 클릭 시 더 어둡게 */
		    border-color: #494f55;
		    box-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125); /* 클릭 시 눌린 효과 */
		}
		
		/* 알림 항목 내부의 버튼 */
		.alert-actions-area button {
		    margin-left: 5px; /* 버튼 사이 간격 */
		    /* 필요하다면 여기에 추가적인 스타일 적용 */
		}
		
		/* 드롭다운 셀렉트 박스 스타일 (선택사항) */
		.alert-filter-area select {
		    padding: 6px 12px;
		    border: 1px solid #ced4da;
		    border-radius: 0.25rem;
		    background-color: #fff;
		    font-size: 0.9em;
		    cursor: pointer;
		}
        @keyframes spin { to { transform: rotate(360deg); } }
		/* mypageMain에 필요한 스타일 */
		        .mypage-section {
		            display: none; /* 기본적으로 숨김 */
		        }
		        .mypage-section.active-section {
		            display: block; /* 활성화된 섹션만 보임 */
		        }
		        /* 알림 관련 스타일 (mypageMain에 직접 정의 또는 alertList.jsp에 정의) */
		        .alert-item {
		            padding: 10px;
		            border-bottom: 1px solid #eee;
		            display: flex;
		            align-items: center;
		            transition: background-color 0.3s ease;
		        }
		        .alert-item.unread {
		            background-color: #e6f7ff; /* 읽지 않은 알림 배경색 */
		        }
		        .alert-item.read {
		            background-color: #f8f8f8; /* 읽은 알림 배경색 */
		            color: #888;
		        }
		        .alert-item:hover {
		            background-color: #f0f0f0;
		        }
		        .alert-icon-area {
		            font-size: 1.5em;
		            margin-right: 15px;
		            color: #007bff;
		        }
		        .alert-content-area {
		            flex-grow: 1;
		        }
		        .alert-content-area .message {
		            display: block;
		            font-size: 0.95em;
		            color: #333;
		        }
		        .alert-content-area .timestamp {
		            display: block;
		            font-size: 0.8em;
		            color: #999;
		            margin-top: 5px;
		        }
		        .alert-link {
		            text-decoration: none;
		            color: inherit; /* 부모 색상 상속 */
		        }
		        .alert-actions-area {
		            display: flex;
		            gap: 5px;
		            align-items: center;
		        }
		        .small-btn {
		            padding: 5px 10px;
		            font-size: 0.8em;
		            border-radius: 5px;
		            cursor: pointer;
		            transition: background-color 0.2s;
		        }
		        .btn-mark-one-alert-read-content {
		            background-color: #28a745;
		            color: white;
		            border: none;
		        }
		        .btn-mark-one-alert-read-content:hover {
		            background-color: #218838;
		        }
		        .btn-delete-one-alert-content {
		            background-color: #dc3545;
		            color: white;
		            border: none;
		        }
		        .btn-delete-one-alert-content:hover {
		            background-color: #c82333;
		        }
		        .btn-mypage-secondary {
		            background-color: #6c757d;
		            color: white;
		            border: none;
		        }
		        .btn-mypage-secondary:hover {
		            background-color: #5a6268;
		        }
		        .pagination-container {
		            display: flex;
		            justify-content: center;
		            padding: 20px 0;
		        }
		        .pagination-container .page-link, .pagination-container .page-item span {
		            padding: 8px 12px;
		            margin: 0 2px;
		            border: 1px solid #dee2e6;
		            border-radius: .25rem;
		            text-decoration: none;
		            color: #007bff;
		            transition: all .2s;
		        }
		        .pagination-container .page-link:hover {
		            background-color: #e9ecef;
		        }
		        .pagination-container .page-item.active .page-link,
		        .pagination-container .page-item.active span {
		            background-color: #007bff;
		            border-color: #007bff;
		            color: white;
		        }
		        .pagination-container .page-item.disabled .page-link,
		        .pagination-container .page-item.disabled span {
		            color: #6c757d;
		            pointer-events: none;
		            background-color: #fff;
		            border-color: #dee2e6;
		        }
    </style>
    
</head>
<body>
    <%@ include file="../modules/communityHeader.jsp" %>

    <div class="mypage-container">
        <%@ include file="../modules/alertAside.jsp" %>
        <div class="mypage-body-wrapper">

        <main class="mypage-content">
            <h2>MY PAGE</h2>
            <c:choose>
            	<c:when test="${currentPage eq 'profile' or empty currentPage }">
            		<jsp:include page="/WEB-INF/views/mypage/testprofileEditForm.jsp" />
            	</c:when>
            	<c:when test="${currentPage eq 'alerts' }">
            		<jsp:include page="/WEB-INF/views/mypage/alertList.jsp" />
            	</c:when>
            	<c:when test="${currentPage eq 'alertSettings' }">
            		<jsp:include page="/WEB-INF/views/mypage/alertSettingForm.jsp" />
            	</c:when>
            	<c:otherwise>
            		<p> 다시골라주세여 </p>
            	</c:otherwise>
            </c:choose>
        </main>
        </div>
    </div>

    <%@ include file="../modules/footerPart.jsp" %>
    
	<script>
	        // 이 함수는 alertList.jsp에서도 호출될 수 있으므로 전역 범위에 유지
	        function updateHeaderBadgeCount(newCount) {
	            const headerBadge = $('#alertBadge'); // 헤더의 알림 배지 ID
	            if (headerBadge.length) {
	                if (newCount > 0) {
	                    headerBadge.text(newCount > 99 ? "99+" : newCount).show();
	                } else {
	                    headerBadge.hide();
	                }
	            }
	            // 페이지 내의 안읽은 알림 개수 표시 업데이트 (mypage section header)
	            const pageUnreadCountDisplay = $('.unread-count-display');
	            if (pageUnreadCountDisplay.length) {
	                if (newCount > 0) {
	                    pageUnreadCountDisplay.text(newCount > 99 ? "99+" : newCount).show();
	                } else {
	                    pageUnreadCountDisplay.hide();
	                }
	            }
	        }

	        $(document).ready(function() {
	            // 초기 unreadCnt 값을 이용해 헤더 배지 업데이트
	            const initialUnreadCnt = parseInt('${unreadCnt}' || '0');
	            updateHeaderBadgeCount(initialUnreadCnt);

	            // 로그아웃 버튼 이벤트 리스너 (원래 mypage/alerts.jsp에 있던 것을 이동)
	            const logoutButton = document.querySelector('.btn.emp-logout-btn');
	            if (logoutButton) {
	                logoutButton.addEventListener('click', function(e) {
	                    e.preventDefault();
	                    Swal.fire({
	                        title: '로그아웃',
	                        text: '로그아웃 하시겠습니까?',
	                        icon: 'question',
	                        showCancelButton: true,
	                        confirmButtonColor: '#3085d6',
	                        cancelButtonColor: '#d33',
	                        confirmButtonText: '네',
	                        cancelButtonText: '취소'
	                    }).then((result) => {
	                        if (result.isConfirmed) {
	                            // 실제 로그아웃 처리 로직 (폼 서브밋 또는 AJAX 호출)
	                            // 예: document.getElementById('logoutForm').submit();
	                            showAlert('success', '로그아웃', '로그아웃 되었습니다.');
	                            // 실제로 로그아웃 페이지로 리다이렉트
	                            // window.location.href = '/logout'; // 실제 로그아웃 URL로 변경
	                        }
	                    });
	                });
	            }
	        });
	    </script>
	
</body>
</html>